doctype html
html(lang='en')
    head
        title= title
        link(rel='stylesheet', href='/style')
        link(rel='manifest', href='/manifest')
        link(rel='preload', href='/font', as="font", crossorigin="anonymous")
        link(rel='apple-touch-icon', href='/favicon.png')
        script(src='./settingscode')
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(name="description", content="The World's only alarm clock made by Themodgamer3 and i use it regularly.")
        meta(name="theme-color" media="(prefers-color-scheme: dark)"  content="black")
        
    body
        form(action=settingssaveaction, method="post", id="formcorrection")
            div(id="smallbox")
                h2=savetitle
                button(type="submit")= savebuttontext
            div(class="size-1-width")
                button(id="greencreatebutton")= create
                each val, index in Alarms
                    div
                        h2=Alarms[index].Day
                        h2=Alarms[index].Time
                        input(type="checkbox", class="checkbox", name=val, checked=Alarms[index].Active, label=" ")
            div(id="settingspopup")
                h1= newalarmdaynumtitle
                input(type="number",name="newalarmdaynum", min="1", max="7")
                h1= newalarmactivetitle
                input(type="checkbox", class="checkbox", name="newalarmactive",checked="on", label=" ")
                h1= newalarmtimetitle
                input(type="time", name="newalarmtime", label=" ")

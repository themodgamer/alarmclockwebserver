doctype html
html(lang='en')
  head
    title= Common.title
    link(rel='stylesheet', href='/style')
    link(rel='manifest', href='/manifest')
    link(rel='preload', href='/font', as="font", crossorigin="anonymous")
    link(rel='apple-touch-icon', href='/favicon.png')
    script(src='./code')
    meta(name="theme-color" media="(prefers-color-scheme: dark)"  content="black")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="The World's only alarm clock made by Themodgamer3 and i use it regularly.")
  body
    div(id="invisidiv", class="size-0-width")
      div(id="smallbox") 
        h1= Common.servertitle
        h2= Common.server
      div(id="smallbox")
        h1= Common.clientiptitle
        h2= Common.clientip
      div(id="smallbox")
        h2= Common.settingstitle
        form(action=Common.buttonsettingsaction, method="get") 
          button= Common.buttonsettingstext
    div(id="size-2-width")
      h1= Common.timetitle
      h1(id="ClockMain")= Common.exampletime
      h1(id="ClockSub")= Common.examplesubclocktime  
    each val,index in Weather
      div
        h2= Weather[index].title
        div(id="weatherdiv", class="size-1-width")
          each val2, index2 in Weather[index].toptext
            div(id="weathersubdivs")
              h2(id="weathertexts", style="background-color: " + Weather[index].daycolor[index2] + ";")= Weather[index].daytitles[index2]
              img(src=Weather[index].src[index], alt="weathericon", id="weatherico")
              h2= Weather[index].toptext[index2]
    div(id="alarmpopup")
      h1= Common.alarmtitle 
      h2= Common.alarmsubtitle
      button(id="alarmdonebutton")= Common.alarmdonebutton
